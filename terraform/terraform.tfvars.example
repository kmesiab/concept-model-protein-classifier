# -------------------------------------------------------------------------
# WARNING:
#   - DO NOT USE THIS FILE DIRECTLY WITH TERRAFORM.
#   - First copy this file to terraform.tfvars and then replace ALL
#     placeholder values with settings appropriate for your environment.
#   - Using the example values as-is may result in deployment to the
#     wrong AWS account or environment, or incur unexpected costs.
# -------------------------------------------------------------------------

# AWS Configuration
aws_region     = "us-west-2"
aws_account_id = "123456789012"  # REQUIRED: Replace with your 12-digit AWS account ID

# Environment
environment = "prod"  # Options: dev, staging, prod

# GitHub Repository
github_repo = "your-github-username/your-repo-name"  # Replace with your GitHub repository

# Domain Configuration
domain_name   = "example.com"      # Replace with your domain name
api_subdomain = "api"              # Replace with your desired API subdomain

# Container Configuration
container_port   = 8000
container_cpu    = 512   # 0.5 vCPU
container_memory = 1024  # 1 GB

# ECS Service Configuration
desired_count = 2

# Health Check
health_check_path = "/health"
