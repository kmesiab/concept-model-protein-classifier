[MAIN]
# Python code to execute, usually for sys.path manipulation such as pygtk.require().
init-hook='import sys; sys.path.append(".")'

# Use multiple processes to speed up Pylint. Specifying 0 will auto-detect the
# number of processors available to use.
jobs=0

# List of plugins (as comma separated values of python module names) to load,
# usually to register additional checkers.
load-plugins=

# Pickle collected data for later comparisons.
persistent=yes

# Specify a score threshold to be exceeded before program exits with error.
fail-under=7.0

[MESSAGES CONTROL]
# Disable specific warnings that are not relevant for this project
disable=
    # Pydantic models and FastAPI dependencies trigger these
    too-few-public-methods,
    # FastAPI validators use cls instead of self
    no-self-argument,
    # Import errors are handled by mypy
    import-error,
    # Global variables are intentional for singletons
    global-statement,
    invalid-name,
    # Logging with f-strings is fine in modern Python
    logging-fstring-interpolation,
    # Missing docstrings for Config classes
    missing-class-docstring,
    # We use keyword arguments extensively
    too-many-arguments,
    too-many-positional-arguments,
    # Pytest fixtures commonly redefine names - this is expected behavior
    redefined-outer-name,
    # Tests often import modules within functions for specific test cases
    import-outside-toplevel

[FORMAT]
# Maximum number of characters on a single line.
max-line-length=120

[BASIC]
# Good variable names which should always be accepted, separated by a comma.
good-names=i,j,k,ex,Run,_,id,aa,df,db

[DESIGN]
# Maximum number of locals for function / method body
max-locals=20
